<manifest
    package="info.andersonpa.polishhorseshoes"
    android:sharedUserId="com.twobits"
    android:sharedUserLabel="@string/sharedUserLabel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <permission android:name="info.andersonpa.pocketleague.READ_DATABASE"/>
    <uses-permission android:name="info.andersonpa.pocketleague.READ_DATABASE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <activity
            android:name=".GameInProgress"
            android:label="@string/title_activity_game_in_progress">
            <intent-filter>
                <action android:name="info.andersonpa.polishhorseshoes.PLAY_GAME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="info.andersonpa.polishhorseshoes.Detail_Game"
            android:label="@string/title_activity_detail_game">
        </activity>

        <activity
            android:name="info.andersonpa.polishhorseshoes.AboutPage"
            android:label="@string/title_activity_about_page">
        </activity>

    </application>

</manifest>








