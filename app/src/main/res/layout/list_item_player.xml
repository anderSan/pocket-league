<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_p_color"
        android:layout_width="15dp"
        android:layout_height="45dip"
        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

    <CheckBox
        android:id="@+id/cb_p_isfavorite"
        android:layout_marginEnd="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        style="?android:attr/starStyle"
        />

    <TextView
        android:id="@+id/tv_p_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_p_color"
        android:layout_toStartOf="@id/cb_p_isfavorite"
        android:hint="Player Nickname"
        android:textAppearance="?android:attr/textAppearanceListItem"
        />

    <TextView
        android:id="@+id/tv_p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_p_nickname"
        android:layout_alignStart="@id/tv_p_nickname"
        android:layout_toStartOf="@id/cb_p_isfavorite"
        android:hint="Player Name"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        />

</RelativeLayout>