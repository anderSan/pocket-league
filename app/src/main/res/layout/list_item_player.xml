<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_p_id"
        android:layout_width="wrap_content"
		android:layout_height="35sp"
		android:gravity="end|center_vertical"
		android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:hint="pid"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_p_id"
        android:layout_alignBaseline="@id/tv_p_id"
        android:hint="name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_p_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_p_name"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/tv_p_id"
        android:hint="nickname"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/tv_p_color"
        android:layout_width="15dp"
        android:layout_height="35sp"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>