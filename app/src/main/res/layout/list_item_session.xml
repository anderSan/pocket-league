<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:mode="twoLine">

    <CheckBox
        android:id="@+id/cb_s_isfavorite"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        style="?android:attr/starStyle"
        />

    <TextView
        android:id="@+id/tv_s_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/cb_s_isfavorite"
        android:hint="Session Name"
        android:textAppearance="?android:attr/textAppearanceListItem"
        />

    <TextView
        android:id="@+id/tv_s_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_s_name"
        android:layout_alignStart="@id/tv_s_name"
        android:layout_toStartOf="@id/cb_s_isfavorite"
        android:text="Session Type"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        />

</RelativeLayout>
