<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_Player" >

    <include
        android:id="@+id/detail_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/nav_bar_detail"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/pDet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/pDet_id"
        android:layout_alignParentStart="true"
        android:layout_above="@id/detail_nav_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:id="@+id/pDet_height"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pDet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:id="@+id/pDet_weight"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pDet_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:id="@+id/pDet_handed"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pDet_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:id="@+id/pDet_footed"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pDet_handed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>